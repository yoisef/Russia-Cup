<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:elevation="8dp"
        android:background="@color/white"
        android:layout_margin="5dp"
        android:id="@+id/linearr"
        android:layout_below="@id/valuenumberplayers"
        android:layout_height="70dp">
        <TextView
            android:layout_width="0dp"

            android:layout_weight=".7"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/Vplayername"
            android:text="Sergey Ignashevich"
            android:gravity="start"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="0dp"
            android:id="@+id/Vplayerposition"

            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="Central Midfield"

            android:textColor="@color/black"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="0dp"
            android:id="@+id/Vplayernumber"
            android:layout_weight=".3"
            android:layout_height="match_parent"
            android:text="29"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="0dp"
            android:id="@+id/Vplayerbirth"
            android:layout_weight=".7"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="1993-07-29"
            android:textColor="@color/black"
            android:textSize="16sp"/>

    </LinearLayout>


</RelativeLayout>