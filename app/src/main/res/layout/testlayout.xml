<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ndroid="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tt"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:text="Number of Players :"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/tt"
            android:text="89"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:id="@+id/valuenumberplayers"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/blue"
            android:layout_margin="5dp"
            android:id="@+id/linearr"
            android:layout_below="@id/valuenumberplayers"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Name"

                android:textSize="18sp"/>
            <TextView
                android:layout_width="0dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Position"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="0dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_weight=".3"
                android:layout_height="wrap_content"
                android:text="Nu"
                android:gravity="center"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="0dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_weight=".7"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="BirthD"
                android:textSize="18sp"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_below="@id/linearr"
            android:id="@+id/viewss"
            android:layout_height="1dp"
            android:background="@color/black"
            />
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_below="@id/viewss"
            android:id="@+id/recycleplayer"
            android:layout_height="0dp"
            android:layout_weight="2.4"
            ></android.support.v7.widget.RecyclerView>
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Stage Matches"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:id="@+id/fixturematchesrecycleview"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/gray"
            android:layout_gravity="center"
            android:text="Swipe to Right"
            android:gravity="center"
            android:drawableRight="@drawable/ic_chevron_right_black_24dp"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:background="@color/blue"
            android:id="@+id/backbutton"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="Back"/>

    </LinearLayout>
</RelativeLayout>